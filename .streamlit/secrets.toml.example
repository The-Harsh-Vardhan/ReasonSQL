# =====================================================================
# Streamlit Secrets Configuration Example
# =====================================================================
#
# SETUP INSTRUCTIONS FOR STREAMLIT CLOUD:
# ----------------------------------------
# 1. Go to your app settings on Streamlit Cloud
# 2. Navigate to "Secrets" section
# 3. Copy the content below and paste it there
# 4. Replace the placeholder values with your actual API keys
#
# SECURITY WARNING:
# -----------------
# - NEVER commit secrets.toml with real keys to Git!
# - This file is .gitignored by default
# - For local development, copy to secrets.toml and add real keys
#
# =====================================================================

# LLM Provider Configuration
[api_keys]
# Option 1: Groq (Recommended - Fast & Free)
# Get your key at: https://console.groq.com/keys
GROQ_API_KEY = "gsk_your_groq_api_key_here"

# Option 2: Google Gemini (Alternative)
# Get your key at: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY = "your_google_api_key_here"

# Which provider to use
LLM_PROVIDER = "gemini"
LLM_MODEL = "gemini/gemini-pro"

# Database Configuration
DATABASE_PATH = "data/chinook.db"
